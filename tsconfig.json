{
  "compilerOptions": {
    "target": "es6",
    "module": "commonjs",
    "outDir": "./dist",
    "rootDir": "./src",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true,
    "moduleResolution": "node"
  },
  "include": [
    "src/**/*",
    "src/config/**/*",
    "src/models/**/*"
  ],
  "exclude": [
    "node_modules",
    "src/database/migrations/**/*",
    "src/database/seeders/**/*"
  ]
} 